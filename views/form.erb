<form name="postform" method="post" enctype="application/x-www-form-urlencoded" action="/register" class="form-horizontal">
  <div class="control-group">
    <label class="control-label">URL / Memo:</label>
    <div class="controls">
      <input type="text" name="longname" placeholder="e.g. http://Google.com/" value='<%= @value %>' class="input-xxlarge">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Description:</label>
    <div class="controls">
      <input type="text" name="description" placeholder="e.g. Google search page" value='<%= @title %>' class="input-xxlarge">
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </div>
  <input name="shortname" type="hidden" value="<%= @shortname %>">
</form>


